<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.genderanddevelopmentsurvey.Categories.EconomicActivity.EconomicActivityOne">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="His/her averange number of working hours?"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spn_workingHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="His/her nature of employment?"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spn_natureOfWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Primary business during the past 6 months?"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spn_industry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:text="next" />

</LinearLayout>
